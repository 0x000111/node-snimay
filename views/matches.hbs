	{{#contentFor 'seo'}} 
	<title>{{website.title}}_配套家具</title>
	<meta name="description" content="{{website.description}}" />
	<meta name="keywords" content="{{website.title}}" />
	{{/contentFor}} 
	<div id="fh5co-product" style="padding-bottom: 0">
		<div class="container">
			<div class="row animate-box">
				<div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
					<h2>配套家具.</h2>
					<p>诗尼曼家居，始终坚持“绿色家居,高端定制”服务理念，提供卧房，厨房，客厅，书房，餐厅，儿童房的全屋家具定制服务。</p>
				</div>
			</div>
			<div class="fh5co-nav row" style="padding: 0">
				<div class="fh5co-nav-category col-md-12 col-xs-12">
					{{#each keys}}
					<ul>
						<li>{{title}}：</li>
						{{#each values}}
						<li>
							<a {{#if isActive}} class="bg-success" {{/if}} href="{{link}}">{{title}}
							</a>
						</li>
						{{/each}}
					</ul>
					{{/each}}
				</div>
			</div>
			{{#groupedEach 3 products}}
			<div class="row">
				{{#each this}}
				<div class="col-md-4 text-center animate-box">
					<div class="product">
						<div class="product-grid" style="background-image:url({{skPic}});">
							<div class="inner">
								<p>
									<a href="single/{{id}}" class="icon"><i class="icon-eye"></i></a>
								</p>
							</div>
						</div>
						<div class="desc">
							<h3>
								<a href="single/{{id}}">{{title}}</a>
							</h3>
							{{#if price}}
							<span class="price">￥{{price}}</span>
							{{/if}}
						</div>
					</div>
				</div>
				{{/each}}
			</div>
			{{/groupedEach}}
		</div>
	</div>

	<div class="text-center">
        <ul id="pagination" class="pagination-sm"></ul>
    </div>
	{{#contentFor 'footer'}} 
	<!-- bootstrap-paginator -->
	<script src="/js/bootstrap-paginator.min.js"></script>
	<script>
		$(document).ready(function () {
			$('#pagination').bootstrapPaginator({
				currentPage: {{currentPage}},
				totalPages: {{totalPages}},
				size: "normal",
				bootstrapMajorVersion: 3,
				alignment: "right",
				numberOfPages: 5,
				pageUrl: function (type, page, current) { 
					var query = '?page=' + page + '{{{pageLink}}}';
					return '/matches' + query;
                }, 
				itemTexts: function (type, page, current) {
					switch (type) {
						case "first": return "首页";
						case "prev": return "上一页";
						case "next": return "下一页";
						case "last": return "末页";
						case "page": return page;
					}
				}
			});
		});
	</script>
	{{/contentFor}}
	