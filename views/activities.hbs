	<div id="fh5co-product" style="padding-bottom: 0">
		<div class="container">
			<div class="row animate-box">
				<div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
					<h2>最新活动.</h2>
					<p>Dignissimos asperiores vitae velit veniam totam fuga molestias accusamus alias autem provident. Odit ab aliquam dolor eius.</p>
				</div>
			</div>
			{{#groupedEach 2 activities}}
			<div class="row">
				{{#each this}}
				<div class="col-md-6 col-sm-6 text-center">
					<div class="feature-center animate-box" data-animate-effect="fadeIn">
						<img src="{{pic}}" alt="{{title}}" style="width: 100%;height: 300px">
						<h4 style="margin-top: 20px">{{title}}</h4>
						{{{activityTimer endTime 1}}}
						<p>{{description}}</p>
						<p><a href="/activity/{{id}}" class="btn btn-primary btn-outline">查看详情</a></p>
					</div>
				</div>
				{{/each}}
			</div>
			{{/groupedEach}}
		</div>
	</div>

	<div class="text-center">
        <ul id="pagination" class="pagination-sm"></ul>
    </div>
	{{#contentFor 'footer'}} 
	<!-- bootstrap-paginator -->
	<script src="/js/bootstrap-paginator.min.js"></script>
	<script>
		$(document).ready(function () {
			$('#pagination').bootstrapPaginator({
				currentPage: {{currentPage}},
				totalPages: {{totalPages}},
				size: "normal",
				bootstrapMajorVersion: 3,
				alignment: "right",
				numberOfPages: 5,
				pageUrl: function (type, page, current) { 
					var query = '?page=' + page;
					return '/activities' + query;
                }, 
				itemTexts: function (type, page, current) {
					switch (type) {
						case "first": return "首页";
						case "prev": return "上一页";
						case "next": return "下一页";
						case "last": return "末页";
						case "page": return page;
					}
				}
			});
		});
	</script>
	{{/contentFor}}
	