<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            活动列表
            <small></small>
        </h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- general form elements -->
        <div class="box box-primary">
            {{#if infos}}
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h4><i class="icon fa fa-check"></i> {{#each infos}}{{this.message}} {{/each}}</h4>
            </div>
            {{/if}}
            <div class="box-header with-border">
                <h3 class="box-title">活动列表</h3> <a href="/admin/activity_add" type="button" class="btn bg-purple">新增</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="activitylist" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>序号</th>
                            <th>标题</th>
                            <th>开始时间</th>
                            <th>结束时间</th>
                            <th>状态</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each list}}
                        <tr>
                            <td>{{addOne @index}}</td>
                            <td>{{title}}</td>
                            <td>{{date startTime "ll"}}</td>
                            <td>{{date endTime "ll"}}</td>
                            <td>
                                {{#if isVisible}} <code>可见</code> {{else}} 隐藏 {{/if}}
                            </td>
                            <td>
                                <a href="/admin/activity_edit/{{_id}}">
                                    编辑 
                                </a>
                                &nbsp;&nbsp;
                                <a href="/admin/activity_remove/{{_id}}">
                                    删除
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
{{#contentFor 'fonter'}}
<!-- DataTables -->
<script src="//cdn.bootcss.com/datatables/1.10.13/js/jquery.dataTables.min.js"></script>
<script src="//cdn.bootcss.com/datatables/1.10.13/js/dataTables.bootstrap.min.js"></script>
<script>
    $(function () {
        $('#activitylist').DataTable({
            "responsive": true,
            "pageLength": 10,
            "paging": true,
            "searching": false,
            "info": true,
            "language":{
                "url": "/language/dataTables.chinese.lang"
            }
        });
    });
</script>
{{/contentFor}}